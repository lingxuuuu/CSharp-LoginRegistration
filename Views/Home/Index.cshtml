@model User
<div class="container">
    <div class="row" style="margin: 25px">
        <div class="col-sm-10">
            <h1>Welcome! Please register below.</h1>
        </div>
        <div class="col-sm-2">
            <a href="/login">Login</a>
        </div>
        <form asp-action="Register" asp-controller="Home" method="POST">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <span asp-validation-for="FirstName"></span><br>
                        <label asp-for="FirstName">First Name:</label>
                        <input class="form-control" id="FirstName" asp-for="FirstName">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="LastName"></span><br>
                        <label asp-for="LastName">Last Name:</label>
                        <input class="form-control" id="LastName" asp-for="LastName">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Email"></span><br>
                        <label asp-for="Email">Email:</label>
                        <input class="form-control" id="Email" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">Sign Up Now</button>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <span asp-validation-for="Password"></span><br>
                        <label asp-for="Password">Password:</label>
                        <input class="form-control" id="Password" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Confirm"></span><br>
                        <label asp-for="Confirm">Confirm Password:</label>
                        <input class="form-control" id="Confirm" asp-for="Confirm">
                    </div>
                </div>   
            </div>
        </form>
    </div>
</div>

